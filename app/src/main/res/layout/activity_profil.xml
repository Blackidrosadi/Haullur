<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akun.ProfilActivity"
    android:background="@drawable/bg_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="15dp">
            <RelativeLayout
                android:id="@+id/kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_left" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/kembali"
                android:text="Profil Saya"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/bg_card_secondary_rounded"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumari Al Tchouameni"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jumaricute@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hubungi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_whatsapp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+62 89696969696"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_primary">
            <LinearLayout
                android:layout_toLeftOf="@+id/kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penugasan"
                    android:textColor="@color/white_50"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/jumlah_penugasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\? Keluarga"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>

            <View
                android:id="@+id/kiri"
                android:layout_toLeftOf="@+id/tengah"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/white_50"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"/>

            <LinearLayout
                android:id="@+id/tengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:textColor="@color/white_50"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumlah_penarikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\? Penarikan"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/kanan"
                android:layout_toRightOf="@+id/tengah"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/white_50"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"/>

            <LinearLayout
                android:layout_toRightOf="@+id/kanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total (Rp)"
                    android:textColor="@color/white_50"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Daftar Penugasan"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tidak_ada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada penugasan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>